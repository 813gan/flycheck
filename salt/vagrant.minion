# -*- mode: yaml; -*-

# Minion configuration file for Vagrant

# ID of the node
id: vagrant

# Local files, this is masterless
file_client: local

# On Vagrant, we load our salts and pillars from the standard shared folder
file_roots:
  testing:
    - /vagrant/salt/salt/testing/

pillar_roots:
  testing:
    - /vagrant/salt/pillar/testing/
